{
  "name": "everscale-standalone-client",
  "version": "3.0.3",
  "repository": "https://github.com/broxus/everscale-standalone-client",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc --module CommonJS --outDir dist/cjs --declaration false",
    "build:esm": "tsc --module ESNext --outDir dist/esm --declaration --declarationDir dist/esm",
    "lint": "npx eslint ."
  },
  "author": "",
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/events": "^3.0.3",
    "@types/node": "^22.15.29",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@broxus/await-semaphore": "^0.1.5",
    "bignumber.js": "^9.3.1",
    "events": "^3.3.0",
    "everscale-inpage-provider": "^0.6.5",
    "fast-safe-stringify": "^2.1.1",
    "nekoton-wasm": "^1.8.2",
    "node-fetch": "^3.3.2"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/esm/index.d.ts"
    },
    "./client/*": {
      "import": "./dist/esm/client/*",
      "require": "./dist/cjs/client/*",
      "types": "./dist/esm/client/*"
    },
    "./core": {
      "import": "./dist/esm/core.js",
      "require": "./dist/cjs/core.js",
      "types": "./dist/esm/core.d.ts"
    },
    "./nodejs": {
      "import": "./dist/esm/nodejs.js",
      "require": "./dist/cjs/nodejs.js",
      "types": "./dist/esm/nodejs.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "./dist/*"
  ]
}
